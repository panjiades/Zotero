#!/bin/bash

cd /data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/home/user2/

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Zotero-8.0-beta.23.part00

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Zotero-8.0-beta.23.part01

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Zotero-8.0-beta.23.part02

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Zotero-8.0-beta.23.part03

cat Zotero-8.0-beta.23.part* > Zotero-8.0-beta.23.tar.bz2

tar -xvf Zotero-8.0-beta.23.tar.bz2

rm  Zotero-8.0-beta*

cd

proot-distro login ubuntu  -- bash -c "cd; dpkg --configure -a; apt remove sudo -y; apt install sudo -y"

proot-distro login ubuntu --user user2 --shared-tmp -- bash -c "cd; cd Zotero_linux-arm64; chmod +x zotero; chmod +x zotero-bin; "

clear 
echo "Masukan password sudo: 123456 (password tidak terlihat) lalu enter"

proot-distro login ubuntu --user user2 --shared-tmp -- bash -c "cd; sudo apt install libreoffice -y"

cd /data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/home/user2/Desktop

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Zotero.desktop

wget https://raw.githubusercontent.com/panjiades/Zotero/refs/heads/main/Libre.desktop
cd
cd
clear

echo "Succes install, press any key.."
read -n 1 -s          
xdg-open "https://wps-pclevel.blogspot.com/2025/12/cara-menghubungkan-libre-dengan-zotero.html?m=1" 2>/dev/null || sensible-browser "https://wps-pclevel.blogspot.com/2025/12/cara-menghubungkan-libre-dengan-zotero.html?m=1"
exit